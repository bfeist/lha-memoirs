{
  "python-envs.defaultEnvManager": "ms-python.python:venv",
  "python-envs.pythonProjects": [],

  // Fix for Git Bash first character omission issue
  // Based on VS Code issues #215402, #274234, #268342
  "terminal.integrated.windowsUseConptyDll": true,

  // Additional terminal fixes for Git Bash stability
  "terminal.integrated.shellIntegration.enabled": true,
  "terminal.integrated.enablePersistentSessions": false,
  "terminal.integrated.scrollback": 5000,

  // Ensure Git Bash is the default terminal
  "terminal.integrated.defaultProfile.windows": "Git Bash",

  // Disable problematic terminal features that can interfere with input
  "terminal.integrated.altClickMovesCursor": false,
  "terminal.integrated.copyOnSelection": false,

  // Format JSON files with Prettier on save
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "chat.tools.terminal.autoApprove": {
    "/^cd /F/_repos/lha-memoirs/scripts && source \\.venv/Scripts/activate && python 02a_correct_dialog\\.py Norm_red --dry-run 2>&1 \\| head -100$/": {
      "approve": true,
      "matchCommandLine": true
    },
    "timeout": true
  }
}
